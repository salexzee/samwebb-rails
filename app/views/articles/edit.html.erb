<div class="container">

  <p>
    <%= link_to '< Back', article_path(@article), class: 'back-link ruby' %>
  </p>

	<h1>Edit Article</h1>

	<%= form_for @article do |f| %>

    <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.text_field :title, class: "title" %>

    <%= f.cktext_area :text, class: "ckeditor" %>

    <!-- Need to get commas between tags -->
    <%= f.text_field :tag_list, class: "tag-adder" %> 
   
    <p class="submit">
      <%= f.submit "Update Article", data: { confirm: "Are you sure?" } %>
    </p>
  <% end %>

  <p>
    <%= link_to '< Back', article_path(@article), class: 'back-link ruby' %>
  </p>

</div>